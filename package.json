{
    "name": "st-lang",
    "version": "0.0.2",
    "displayName": "ST Lang",
    "description": "Syntax highlighting for st lang",
    "main": "./out/extension.js",
    "icon": "./imgs/st.png",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:st"
    ],
    "contributes": {
        "languages": [
            {
                "id": "st",
                "extensions": [
                    ".st",
                    ".st.txt"
                ],
                "configuration": "./ston.language-configuration.json"
            },
            {
                "id": "urls",
                "extensions": [
                    ".urls",
                    ".urls.txt"
                ],
                "configuration": "./ston.language-configuration.json"
            },
            {
                "id": "ston",
                "extensions": [
                    ".ston",
                    ".ston.txt"
                ],
                "configuration": "./ston.language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "st",
                "scopeName": "source.st",
                "path": "./syntaxes/st.tmLanguage.json"
            },
            {
                "language": "urls",
                "scopeName": "source.urls",
                "path": "./syntaxes/urls.tmLanguage.json"
            },
            {
                "language": "ston",
                "scopeName": "source.ston",
                "path": "./syntaxes/ston.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "st",
                "path": "./snippets.json"
            }
        ]
    },
    "scripts": {
        "compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/node": "^15.12.4",
        "@types/vscode": "^1.57.0",
        "typescript": "^4.3.4"
    },
    "dependencies": {
        "ston": "^0.0.3"
    }
}
