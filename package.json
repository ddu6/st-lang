{
    "name": "st-lang",
    "version": "0.0.2",
    "displayName": "ST Lang",
    "description": "Syntax highlighting for st lang.",
    "main": "./out/extension.js",
    "icon": "./imgs/st.png",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:st"
    ],
    "contributes": {
        "languages": [
            {
                "id": "st",
                "aliases": [
                    "Simple Text",
                    "st"
                ],
                "extensions": [
                    ".st",
                    ".st.txt"
                ],
                "configuration": "./st.language-configuration.json"
            },
            {
                "id": "urls",
                "aliases": [
                    "URLs",
                    "urls"
                ],
                "extensions": [
                    ".urls",
                    ".urls.txt"
                ],
                "configuration": "./urls.language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "st",
                "scopeName": "source.st",
                "path": "./syntaxes/st.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/node": "^15.12.2",
        "@types/vscode": "^1.57.0",
        "typescript": "^4.3.2"
    }
}
