{
  "name": "st-lang",
  "version": "0.21.2",
  "displayName": "ST Lang",
  "description": "Highlight, preview and more for st lang",
  "main": "extension.js",
  "icon": "imgs/st.png",
  "scripts": {
    "build": "tsc && webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/st-org/st-lang.git"
  },
  "publisher": "ddu",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@types/vscode": "^1.60.0",
    "stdn": "^0.3.1",
    "ston": "^0.3.3"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:stdn",
    "onLanguage:urls",
    "onLanguage:ston",
    "onCommand:st-lang.preview"
  ],
  "contributes": {
    "commands": [
      {
        "command": "st-lang.preview",
        "title": "Preview",
        "icon": "$(open-preview)"
      },
      {
        "command": "st-lang.stringify",
        "title": "Stringify"
      },
      {
        "command": "st-lang.copy-stringify-result",
        "title": "Copy Stringify Result"
      },
      {
        "command": "st-lang.copy-id",
        "title": "Copy Id"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "st-lang.preview",
          "when": "editorLangId == stdn || editorLangId == urls",
          "group": "navigation"
        },
        {
          "command": "st-lang.stringify",
          "when": "editorLangId == stdn && editorHasSelection || editorLangId == urls && editorHasSelection || editorLangId == ston && editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "st-lang.copy-stringify-result",
          "when": "editorLangId == stdn && editorHasSelection || editorLangId == urls && editorHasSelection || editorLangId == ston && editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "st-lang.copy-id",
          "when": "editorLangId == stdn && editorHasSelection || editorLangId == urls && editorHasSelection || editorLangId == ston && editorHasSelection",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "st-lang.preview",
          "when": "editorLangId == stdn || editorLangId == urls",
          "group": "navigation"
        },
        {
          "command": "st-lang.stringify",
          "when": "editorLangId == stdn && editorHasSelection || editorLangId == urls && editorHasSelection || editorLangId == ston && editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "st-lang.copy-stringify-result",
          "when": "editorLangId == stdn && editorHasSelection || editorLangId == urls && editorHasSelection || editorLangId == ston && editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "st-lang.copy-id",
          "when": "editorLangId == stdn && editorHasSelection || editorLangId == urls && editorHasSelection || editorLangId == ston && editorHasSelection",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "st-lang.preview",
          "when": "editorLangId == stdn || editorLangId == urls",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "stdn",
        "extensions": [
          ".stdn",
          ".stdn.txt"
        ],
        "configuration": "ston.language-configuration.json"
      },
      {
        "id": "urls",
        "extensions": [
          ".urls",
          ".urls.txt"
        ],
        "configuration": "ston.language-configuration.json"
      },
      {
        "id": "ston",
        "extensions": [
          ".ston",
          ".ston.txt"
        ],
        "configuration": "ston.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "stdn",
        "scopeName": "source.stdn",
        "path": "syntaxes/stdn.tmLanguage.json"
      },
      {
        "language": "urls",
        "scopeName": "source.urls",
        "path": "syntaxes/urls.tmLanguage.json"
      },
      {
        "language": "ston",
        "scopeName": "source.ston",
        "path": "syntaxes/ston.tmLanguage.json"
      },
      {
        "scopeName": "text.html.markdown.injection.st-lang",
        "path": "syntaxes/markdown.injection.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.stdn": "stdn",
          "meta.embedded.block.urls": "urls",
          "meta.embedded.block.ston": "ston"
        }
      }
    ]
  }
}
